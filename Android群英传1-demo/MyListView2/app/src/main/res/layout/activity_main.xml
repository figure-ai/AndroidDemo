<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnViewHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ViewHolder"/>

    <Button
        android:id="@+id/btnScrollHide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scroll Hide"/>

    <Button
        android:id="@+id/btnFlexible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Flexible ListView"/>

    <Button
        android:id="@+id/btnChatItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chat Item"/>

    <Button
        android:id="@+id/btnFoucus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Focus"/>

</LinearLayout>
